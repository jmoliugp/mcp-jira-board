# ========================================
# JIRA API CONFIGURATION
# ========================================

# Required: Jira Instance Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token_here

# Optional: API Behavior Configuration
JIRA_API_TIMEOUT=10000
JIRA_API_RETRY_ATTEMPTS=3
JIRA_API_RETRY_DELAY=1000

# Optional: Logging Configuration
JIRA_LOG_LEVEL=info
JIRA_LOG_REQUESTS=true
JIRA_LOG_RESPONSES=true

# Optional: Rate Limiting
JIRA_RATE_LIMIT_ENABLED=true
JIRA_RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Optional: Environment Configuration
NODE_ENV=development
JIRA_ENVIRONMENT=cloud

# ========================================
# OTHER CONFIGURATION
# ========================================

# OpenAI API Key (if using other features)
OPENAI_API_KEY=your_openai_api_key_here