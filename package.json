{
  "name": "mcp-jira-board",
  "version": "1.0.0",
  "description": "Jira MCP Server",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node scripts/add-extensions.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test:unit": "vitest",
    "test:integration": "vitest --config integration-tests/vitest.config.ts",
    "test:all": "pnpm test:unit && pnpm test:integration",
    "test:integration:report": "tsx integration-tests/serve-report.ts",
    "test:integration:coverage": "open integration-tests/output/coverage/index.html",
    "mcp:test": "tsx scripts/test-mcp-server.ts",
    "mcp:start": "tsx src/mcps/index.ts"
  },
  "keywords": [
    "typescript",
    "minimalist"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "axios": "^1.6.7",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.5",
    "zod": "^4.0.5"
  }
}
